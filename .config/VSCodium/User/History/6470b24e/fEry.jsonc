{
  "custom/network-bluetooth": {
    "format": "{} {}",
    "interval": 2,
    "exec": "echo \"$(nmcli -t -f WIFI g) $(bluetoothctl show | grep Powered | awk '{print $2}')\"",
    "on-click": "kitty iwctl",
    "on-click-right": "blueman-manager",
    "tooltip": true,
    "tooltip-format": "Wi-Fi и Bluetooth статус вместе"
  }
}
